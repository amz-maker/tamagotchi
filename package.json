{
  "name": "tamagotchi",
  "version": "1.0.0",
  "description": "phaser 3 + electron + typescript + parcel",
  "main": "build/main.js",
  "scripts": {
    "----- Starter -----": "",
    "build": "rimraf build && parcel build src/main.ts src/index.html --public-url ./ -d build --out-file=main --target=electron",
    "parcel-start": "parcel src/index.html",
    "electron-start": "electron build/main.js",
    "electron-debug-chrome": "cross-env ELECTRON_DEBUG=true electron build/main.js",
    "electron-debug-vscode": "cross-env ELECTRON_DEBUG=vscode electron --remote-debugging-port=9223 build/main.js",
    "---- Deploy exe ----": "",
    "deploy-windows": "yarn build && electron-builder --windows nsis:ia32",
    "----- Cleaner -----": "",
    "superclean": "rimraf .cache node_modules build dist",
    "clean": "rimraf build dist"
  },
  "homepage": "https://github.com/distantcam/phaser-electron-typescript-parcel",
  "bugs": {
    "url": "https://github.com/distantcam/phaser-electron-typescript-parcel/issues"
  },
  "build": {
    "productName": "Tamagotchi",
    "appId": "parcel.electron",
    "asar": true,
    "mac": {
      "category": "your.app.category.type"
    },
    "dmg": {
      "title": "Start Electron"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true
    },
    "directories": {
      "buildResources": "assets",
      "output": "./dist/",
      "app": "."
    },
    "files": [
      "./build/**/*"
    ],
    "asarUnpack": "**/assets/*"
  },
  "keywords": [
    "phaser",
    "electron"
  ],
  "author": "distantcam",
  "license": "MIT",
  "dependencies": {
    "phaser": "^3.55.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "download-cli": "^1.1.1",
    "electron": "^20.0.3",
    "electron-builder": "^23.3.3",
    "electron-reload": "^2.0.0-alpha.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.5",
    "parcel-plugin-static-files-copy": "^2.6.0",
    "rimraf": "^3.0.2",
    "sass": "^1.54.5",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4"
  }
}